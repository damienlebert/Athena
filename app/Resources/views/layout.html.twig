    {% stylesheets filter='cssrewrite'
    '@AthenaChatBundle/Resources/public/vendor/bootstrap/dist/css/bootstrap.min.css'
    '@AthenaChatBundle/Resources/public/vendor/bootstrap/dist/css/bootstrap-theme.min.css'
