        <div id="error"></div>
        {% block content %}
            <h1>Contenu par defaut</h1>
        {% endblock %}

    </div>
    {% javascripts '@AthenaChatBundle/Resources/public/vendor/jquery/dist/jquery.min.js'
    '@AthenaChatBundle/Resources/public/vendor/bootstrap/dist/js/bootstrap.min.js'
