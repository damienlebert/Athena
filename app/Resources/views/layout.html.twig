    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                 <a class="navbar-brand" href="./welcome" onClick="changerPage('welcome');return false;">ATHENA Messenger</a>                            
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                        <li id='welcome' class="active">
                            <a href="./welcome" onClick="changerPage('welcome');return false;">Accueil</a>
                        </li>
                        <li id='chat' class="inactive">
                            <a href="./chat" onClick="changerPage('chat');return false;">Chat</a>
                        </li>
                        
                </ul>
                <ul class="nav navbar-nav navbar-right">
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li class="active">
                        <p class="navbar-text blue-text">
                            Bonjour {{ app.user.username }}&nbsp;
                        </p>            
                    </li>
                    <li class="inactive">
                        <a href="{{ path('fos_user_security_logout') }}">DÃ©connexion</a>
                    </li>
{% else %}
                    <li class="inactive">
                        <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                    </li>
{% endif %}                    
                </ul>
            </div>
