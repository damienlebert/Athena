{% trans_default_domain 'FOSUserBundle' %}
<div id="header-login" class="skel-layers-fixed">

    <div class="top">

        <div class="container">
            <div class="row" style="margin-top: 10px;">
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <img src="/bundles/athenachat/images/logo-1.png" class="logo_login" />
                </div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
            </div>
            <div class="row">
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <section class="form_login">
                        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
                            <div class="panel-body">

                                <h1 class="title_login">Changement de mot de passe</h1>
                                {{ form_errors(form) }}
                                {{ form_widget(form._token) }}
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        {{ form_widget(form.plainPassword.first, { "attr": {"class": "form-control input-login", "placeholder": "Nouveau mot de passe"} }) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        {{ form_widget(form.plainPassword.second, { "attr": {"class": "form-control input-login", "placeholder": "Répétez le mot de passe"} }) }}
                                    </div>
                                </div>
                            </div><!-- /.panel-body -->
                            <input type="submit" class="btn btn-default button_login" id="_submit" name="_submit" value="{{ 'resetting.reset.submit'|trans }}" />
                        </form><!-- /.formulaire-connexion -->

                    </section>
                </div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
            </div>


            <div class="row">
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <!-- Social Icons -->
                    <ul class="icons">
                        <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                        <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                        <li><a href="#" class="icon fa-github"><span class="label">Github</span></a></li>
                        <li><a href="#" class="icon fa-dribbble"><span class="label">Dribbble</span></a></li>
                        <li><a href="#" class="icon fa-envelope"><span class="label">Email</span></a></li>
                    </ul>
                    <div style="text-align: center;">

                        <small style="font-size: 10px; color: grey; line-height: 12px;">
                            &copy;Copyright Pierre VASSOILLES & Damien LEBERT / IP-FORMATION <br>
                            Designed by <a href="http://html5up.net" target="_blank">HTML5 UP</a>
                        </small>
                    </div>
                </div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
            </div>
        </div>


    </div>



</div>
