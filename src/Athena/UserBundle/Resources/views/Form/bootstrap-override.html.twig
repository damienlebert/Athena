

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <p class="text-danger">
        {% for error in errors %}
            {{ error.message }}<br />
        {% endfor %}
    </p>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block form_row %}
{% spaceless %}
    <div class="form-group {{ errors|length > 0 ? 'has-error' }}">
        {{ form_label(form, null, {'label_attr': {'class': 'control-label col-sm-3'}}) }}
        <div class="col-sm-9">
                {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}