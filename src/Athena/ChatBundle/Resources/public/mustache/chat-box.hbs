<div id="bloc-conversation-{{ id_conversation }}" class="bloc-conversation visible">
    <div id="bouton-conversation-{{ id_conversation }}" onClick="hide('{{ id_conversation }}');return false;" class="fixe-bas hidden">
        <div class="top-bar" style="bottom:15px;position:relative" >
            <div class="left" >
                <span class="typcn typcn-message" id="logoBar-"></span>
                <h1>{{ name }}</h1>
            </div>
            <div class="right">
                <span class="glyphicon glyphicon-remove" onClick="removeConversation('{{ id_conversation }}')"></span>
            </div>
        </div>
    </div>
    <div class="module visible" name="modal-conversation" id="conversation-{{ id_conversation }}">
        <div class="top-bar" onClick="hide('{{ id_conversation }}');">
            <div class="left" >
                <span class="typcn typcn-message" id="logoConv-"></span>
                <h1>{{ name }}</h1>
            </div>
            <div class="right">
                <span class="glyphicon glyphicon-remove" onClick="removeConversation('{{ id_conversation }}')"></span>
            </div>
        </div>
        <div id="panel-message-{{ id_conversation }}" class="visible">
            <div class="discussionContainer" id="messagesPanel-{{ id_conversation }}">
                <ol id="discussion-{{ id_conversation }}" class="discussion">

                </ol>
            </div>
            <div class="form-group form-group-colle">
                <input type="text" class="form-control input-sm" style="border-radius:0;" id="message-{{ id_conversation }}" placeholder="Votre message"/>
            </div>
        </div>
    </div>
</div>