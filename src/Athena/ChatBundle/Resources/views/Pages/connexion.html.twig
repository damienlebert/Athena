{% extends "AthenaChatBundle::layout.html.twig" %}

{%block content %} 
<div class="container margin-top">
    <div class="row">  
      <div class="col-sm-2 col-md-2 col-lg-2"></div>
      <div class="col-sm-8 col-md-8 col-lg-8">
          <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="">Connectez-vous  </h4>
              </div><!-- /.panel-header -->
              <form class="form-horizontal" method="post" action="{{ path('login_check') }}">
                <div class="panel-body">
{% if error %}
                    <div class="alert alert-danger">{{ error.message }}</div>
{% endif %}    
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="username">Identifiant : </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="f_username" id="username" placeholder="Identifiant" value="{{ last_username }}"/>
                        </div>
                    </div>
                    <div class="form-group">  
                        <label class="col-sm-3 control-label" for="password">Mot de passe : </label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" name="f_password" id="password" placeholder="Mot de passe"/>
                        </div>
                    </div>
                </div><!-- /.panel-body -->
                <div class="panel-footer">
                  <button type="reset" class="btn btn-default" data-dismiss="modal">Annuler</button>
                  <input type="submit" class="btn btn-primary" value="Connexion" />
                </div><!-- /.panel-footer -->
              </form><!-- /.formulaire-connexion -->
              </div>
          </div>
          <div class="col-sm-2 col-md-2 col-lg-2"></div>
    </div>
</div>

{% endblock %}